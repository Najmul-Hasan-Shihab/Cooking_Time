# Recipe Website - Environment Variables

# ======================
# General Settings
# ======================
ENVIRONMENT=development
DEBUG=True

# ======================
# Django Backend Settings
# ======================
SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,backend
DJANGO_CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ======================
# MongoDB Settings
# ======================
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_NAME=recipe_website
MONGODB_USER=recipe_admin
MONGODB_PASSWORD=change-this-password

# MongoDB Connection String (alternative to individual settings)
# MONGODB_URI=mongodb://recipe_admin:change-this-password@mongodb:27017/recipe_website

# ======================
# JWT Authentication
# ======================
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_LIFETIME=60  # minutes
JWT_REFRESH_TOKEN_LIFETIME=1440  # minutes (24 hours)

# ======================
# File Upload Settings
# ======================
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Cloud Storage (S3/DigitalOcean Spaces/Cloudinary)
USE_CLOUD_STORAGE=False
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=recipe-website-media
# AWS_S3_REGION_NAME=us-east-1

# Cloudinary (alternative)
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# ======================
# Email Settings
# ======================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@recipewebsite.com

# ======================
# Frontend Settings
# ======================
VITE_API_URL=http://localhost:8000/api
VITE_APP_NAME=Recipe Website

# ======================
# Redis (for caching - optional)
# ======================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ======================
# Security Settings
# ======================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_ANONYMOUS=100/hour
RATE_LIMIT_AUTHENTICATED=1000/hour

# ======================
# Analytics & Monitoring
# ======================
# SENTRY_DSN=your-sentry-dsn
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# ======================
# API Keys (Third-party services)
# ======================
# NUTRITION_API_KEY=your-nutrition-api-key
# OPENAI_API_KEY=your-openai-key-for-ai-features

# ======================
# Development Tools
# ======================
DJANGO_DEBUG_TOOLBAR=True
